algoritmo "semnome"
// Função :
// Autor :
// Data : 7/20/2020
// Seção de Declarações 
var
numero, i, contador: inteiro
inicio
escreval ("digite um numero")
leia (numero)
se numero % 2 = 0 ENTAO
   i <- 1
   contador <- numero + 1
senao
   i <- 1
   contador <- int(numero)

fimse
para i de i ate contador - 1 passo 2 faca
     escreval (i)
fimpara
fimalgoritmo
